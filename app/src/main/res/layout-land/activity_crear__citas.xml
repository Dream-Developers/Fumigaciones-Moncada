<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView

        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        app:cardBackgroundColor="#60000000">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre Cliente"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />


                <EditText
                    android:id="@+id/registro_nombres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/baseline_supervised_user_circle_white_18dp"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:textSize="20dp"
                    android:background="@drawable/rectangulo_blanco"
                    android:maxLength="50"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direccion "
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/registro_direccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/baseline_my_location_white_18dp"
                    android:lines="1"
                    android:textSize="20dp"
                    android:background="@drawable/rectangulo_blanco"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/registro_Precio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/baseline_attach_money_white_18dp"
                    android:inputType="number"
                    android:textSize="20dp"
                    android:background="@drawable/rectangulo_blanco"
                    android:lines="1"
                    android:maxLength="30"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:textColor="#ffffff"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/registro_Fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/baseline_date_range_white_18dp"
                    android:focusable="false"
                    android:inputType="date"
                    android:lines="1"
                    android:textSize="20dp"
                    android:background="@drawable/rectangulo_blanco"
                    android:onClick="fechass"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/registro_Hora"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/baseline_alarm_white_18dp"
                    android:focusable="false"
                    android:inputType="time"
                    android:lines="1"
                    android:textSize="20dp"
                    android:background="@drawable/rectangulo_blanco"
                    android:onClick="onClick1"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff" />


                <Button
                    android:id="@+id/registrar"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/oval"
                    android:onClick="registrar"
                    android:text="Agregar Cita"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"

                    />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>