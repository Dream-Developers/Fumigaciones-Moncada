<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/esteesmaschido"
    >

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            card_view:cardBackgroundColor="#2D000000"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardUseCompatPadding="false">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:padding="25dp"
                android:layout_weight="1">
                <EditText
                    android:layout_marginTop="15dp"
                    android:id="@+id/tituloImagenDA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titulo"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="30sp"
                    android:maxLength="500"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/descripcionImagenDA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripcion"
                    android:textSize="25dp"
                    android:maxLength="500"
                    android:textColor="#DD1B1919"
                    />
                <Button
                    android:id="@+id/guardarcambios"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:text="Guardar"
                    android:background="@drawable/oval"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textStyle="normal|bold"
                    android:layout_marginTop="25dp"
                    android:textSize="20dp"
                    android:layout_marginBottom="25dp"
                    android:layout_gravity="center"/>

            </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_weight="2">
                   <com.android.volley.toolbox.NetworkImageView
                       android:id="@+id/idImagenDA"
                       android:layout_width="match_parent"
                       android:layout_height="250dp"
                       android:scaleType="fitCenter"
                       />

               </LinearLayout>

            </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
</ScrollView>