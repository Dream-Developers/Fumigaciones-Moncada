<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.clientes.Detalle_Cliente">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/imagen_cliente"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="9dp"
            android:foregroundGravity="center"
            android:background="@drawable/boton_redondo"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/person" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nombreCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Nombre:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nombre_detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_toRightOf="@+id/nombreCliente"
                android:text="Maria Izamar Molina" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/residencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nombreCliente"
                android:layout_margin="10dp"
                android:text="Residencia:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/residencia_detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nombreCliente"
                android:layout_margin="15dp"
                android:layout_toRightOf="@+id/residencia"
                android:text="Danli" />



        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/telefonoCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/residencia"
                android:layout_margin="10dp"
                android:text="Telefono:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/telefono_detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/residencia_detalle"
                android:layout_margin="15dp"
                android:layout_toRightOf="@+id/telefonoCliente"
                android:text="89765643" />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/CorreoCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/telefonoCliente"
                android:layout_marginLeft="10dp"
                android:text="Correo:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/correo_detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/telefono_detalle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="71dp"
                android:layout_marginRight="71dp"
                android:layout_toEndOf="@+id/CorreoCliente"
                android:layout_toRightOf="@+id/CorreoCliente"
                android:text="Izamar_molina@yahoo.com" />


        </LinearLayout>



    </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>