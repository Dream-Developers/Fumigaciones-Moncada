<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/error">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.Toolbar
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.rey.material.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/informacion_personal"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:textStyle="bold"
                    android:textColor="#000"/>
                <ImageView
                    android:id="@+id/editar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_mode_edit_black_24dp"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"/>

            </androidx.appcompat.widget.Toolbar>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000">
                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/circleview"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitCenter"
                    android:background="#fff"
                    />




            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.rey.material.widget.TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="@string/nombre"
                        android:textSize="14dp"
                        android:padding="15dp"
                        android:textColor="#000"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#ACACAC"/>
                    <com.rey.material.widget.TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/correo"
                        android:textSize="14dp"
                        android:padding="15dp"
                        android:textColor="#000"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#ACACAC"/>
                    <com.rey.material.widget.TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/telefono"
                        android:textSize="14dp"
                        android:padding="@dimen/margenleft"
                        android:id="@+id/myTextView"
                        android:textColor="#000"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#ACACAC"/>
                    <com.rey.material.widget.TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/direccion"
                        android:textSize="14dp"
                        android:padding="@dimen/margenleft"
                        android:id="@+id/direccion"
                        android:textColor="#000"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:id="@+id/nombresP"
                        android:hint="Sam Enric"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/margenleft"
                        android:layout_gravity="left"
                        android:background="#00000000"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#ACACAC"/>
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="wrap_content"
                        android:id="@+id/correoP"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:hint="Sam_enric@Seotoolzz.com"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/margenleft"
                        android:layout_gravity="left"
                        android:focusable="false"
                        android:background="#00000000"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#ACACAC"/>
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="wrap_content"
                        android:id="@+id/telefonoP"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="14dp"
                        android:hint="99999999"
                        android:maxLength="8"
                        android:background="#00000000"
                        android:padding="@dimen/margenleft"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#ACACAC"/>
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="wrap_content"
                        android:id="@+id/direccionP"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:hint="Danli , el Paraiso colonia la Reforma"
                        android:background="#00000000"
                        android:padding="@dimen/margenleft"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



    </androidx.core.widget.NestedScrollView>

</LinearLayout>
