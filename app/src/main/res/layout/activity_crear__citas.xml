<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo2"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/registro_nombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/baseline_supervised_user_circle_white_18dp"
                android:hint="  Nombre Cliente "
                android:lines="1"
                android:maxLength="30"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"


                />

            <EditText
                android:id="@+id/registro_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/baseline_my_location_white_18dp"
                android:hint="  Direccion"
                android:lines="1"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"


                />

            <EditText
                android:id="@+id/registro_Precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/baseline_attach_money_white_18dp"
                android:hint="  Precio Cita"
                android:inputType="number"
                android:lines="1"
                android:maxLength="30"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"


                />


            <EditText
                android:id="@+id/registro_Fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/baseline_date_range_white_18dp"
                android:focusable="false"
                android:hint="  Fecha Fumigacion"
                android:inputType="date"
                android:lines="1"
                android:onClick="fechass"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff" />

            <EditText
                android:id="@+id/registro_Hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/baseline_alarm_white_18dp"
                android:focusable="false"
                android:hint=" Hora"
                android:inputType="time"
                android:lines="1"
                android:onClick="onClick1"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff" />


            <Button
                android:id="@+id/registrar"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/oval"
                android:onClick="registrar"
                android:text="Agregar Cita"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"

                />

        </LinearLayout>
    </ScrollView>


</LinearLayout>