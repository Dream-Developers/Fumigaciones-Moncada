<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cinco">



    <androidx.cardview.widget.CardView

        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#60000000">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre Cliente"
                    android:layout_marginTop="50dp"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />


                <EditText
                    android:id="@+id/registro_nombres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangulo_blanco"
                    android:drawableLeft="@drawable/baseline_supervised_user_circle_white_18dp"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:maxLength="50"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:textSize="25dp"


                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/registro_Precio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangulo_blanco"
                    android:drawableLeft="@drawable/baseline_attach_money_white_18dp"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="30"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:textSize="25dp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/reg_Fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangulo_blanco"
                    android:drawableLeft="@drawable/baseline_date_range_white_18dp"
                    android:focusable="false"
                    android:inputType="date"
                    android:lines="1"
                    android:onClick="obtenerfecha"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalle"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/registrodetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangulo_blanco"
                    android:drawableLeft="@drawable/baseline_alarm_white_18dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:textSize="25dp" />


                <Button
                    android:id="@+id/registrar12"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/oval"
                    android:onClick="registrar1"
                    android:text="Agregar Factura"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"

                    />

            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>