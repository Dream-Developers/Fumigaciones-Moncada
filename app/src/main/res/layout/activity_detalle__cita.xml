<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">


        <TextView
            android:id="@+id/Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="28dp"
            android:text="Nombre:"
            android:textColor="#111"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detalle_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/Nombre"
            android:gravity="center"
            android:text="Maria Molina "
            android:textColor="#111"
            android:textSize="25dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Nombre"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Direccion:"
            android:textColor="#111"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detalle_direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Nombre"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginBottom="21dp"
            android:layout_toRightOf="@+id/direccion"
            android:gravity="center"
            android:text=" Danli "
            android:textColor="#111"
            android:textSize="25dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detalle_direccion"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Precio:"
            android:textColor="#111"
            android:textSize="30dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/detalle_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detalle_direccion"
            android:layout_marginStart="39dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginBottom="21dp"
            android:layout_toRightOf="@+id/fechaFumigacion"
            android:text="12345"
            android:textColor="#111"
            android:textSize="25dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/fechaFumigacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/precio"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Fecha:"
            android:textColor="#111"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detalle_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detalle_precio"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="35dp"
            android:inputType="date"
            android:text="03/12/2019"
            android:textColor="#111"
            android:textSize="25dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detalle_fecha"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:text="Hora:"
            android:textColor="#111"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detalle_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detalle_fecha"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:layout_toRightOf="@+id/hora"
            android:text="15:00:00"
            android:textColor="#111"
            android:textSize="25dp"
            android:textStyle="normal" />


    </RelativeLayout>
    </LinearLayout>
    </ScrollView>



</RelativeLayout>