<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="500dp"
        android:layout_height="800dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="65dp"
        app:cardBackgroundColor="#60000000">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="600dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginBottom="86dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:text="MONCADA'S FUMIGACIONES"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="20dp"
                    android:textStyle="normal|bold" />


                <EditText
                    android:id="@+id/registro_nombres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_person_pin_white_18dp"
                    android:hint="  Nombre Completo"
                    android:lines="1"
                    android:maxLength="30"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"


                    />

                <EditText
                    android:id="@+id/registro_apellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_person_pin_white_18dp"
                    android:hint=" Residencia "
                    android:lines="1"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"


                    />

                <EditText
                    android:id="@+id/registro_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_phone_in_talk_white_18dp"
                    android:hint="  Telefono"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="8"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"


                    />


                <EditText
                    android:id="@+id/registro_correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_email_white_18dp"
                    android:hint="  Correo"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff" />

                <EditText
                    android:id="@+id/registro_contrase単a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_vpn_key_white_18dp"
                    android:hint=" Contrase単a"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff" />

                <EditText
                    android:id="@+id/comprobacion_contrase単a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_check_circle_outline_white_18dp"
                    android:hint=" Confirmar Contrase単a"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff" />


                <Button
                    android:id="@+id/registrar"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/oval"
                    android:onClick="registrar"
                    android:text="Registrar"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"

                    />

            </LinearLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>


</RelativeLayout>