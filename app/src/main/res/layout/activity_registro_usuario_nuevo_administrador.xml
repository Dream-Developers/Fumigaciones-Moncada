<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="match_parent"
    android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


                <ImageButton
                    android:id="@+id/foto"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:background="@drawable/boton_redondo"
                    android:scaleType="centerCrop"
                    android:src="@drawable/perfil" />


            <EditText
                android:id="@+id/registro_nombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/nombre_cliente"
                android:hint="Nombre Completo"
                android:lines="1"
                android:maxLength="30"



                />

            <EditText
                android:id="@+id/registro_apellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/residencia_cliente"
                android:hint="Residencia "
                android:lines="1"



                />

            <EditText
                android:id="@+id/registro_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789."
                android:drawableLeft="@drawable/telefono_cliente"
                android:hint="Telefono"
                android:inputType="phone"
                android:maxLength="8"
                 />


            <EditText
                android:id="@+id/registro_correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/correo_cliente"
                android:hint="example0@gmail.com"
                android:inputType="textEmailAddress"
                android:lines="1"
                 />

            <EditText
                android:id="@+id/registro_contrase単a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/cotra_cliente"
                android:focusable="false"
                android:hint="Contrase単a"
                android:inputType="textPassword"
                android:lines="1"
                />

            <EditText
                android:id="@+id/comprobacion_contrase単a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/confi_cliente"
                android:focusable="false"
                android:hint="Confirmar Contrase単a"
                android:inputType="textPassword"
                android:lines="1"
                 />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/maculino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:clickable="true"
                    android:text="Hombre"

                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/femenino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mujer"
                    android:textSize="18dp" />
            </RadioGroup>


            <Button
                android:id="@+id/registrar"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/oval"
                android:onClick="registrar"
                android:text="Registrar"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"

                />

        </LinearLayout>

</ScrollView>




