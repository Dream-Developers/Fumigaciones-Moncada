<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.citas.DetalleCitaScrollingActivity"
    tools:showIn="@layout/activity_detalle_cita_scrolling">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       android:padding="15dp"
        >

        <TextView
            android:id="@+id/direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Nombre"
            android:text="DirecciÃ³n:"
            android:textColor="#111"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detalle_direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Danli "
            android:textColor="#111"
            android:textSize="25dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio:"
            android:textColor="#111"
            android:textSize="30dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/detalle_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345"
            android:textColor="#111"
            android:textSize="25dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/fechaFumigacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            android:textColor="#111"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detalle_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detalle_precio"
            android:inputType="date"
            android:text="03/12/2019"
            android:textColor="#111"
            android:textSize="25dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora:"
            android:textColor="#111"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detalle_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:00:00"
            android:textColor="#111"
            android:textSize="25dp"
            android:textStyle="normal" />


    </LinearLayout>



</androidx.core.widget.NestedScrollView>