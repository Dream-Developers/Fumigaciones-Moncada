<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/error">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.Toolbar
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.rey.material.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/informacion_personal"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:textStyle="bold"
                    android:textColor="#000"/>


            </androidx.appcompat.widget.Toolbar>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/imagen_cliente"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/user_detalle"
                    />

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.rey.material.widget.TextView
                        android:id="@+id/nombreCliente"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="@string/nombre"
                        android:textSize="14dp"
                        android:padding="15dp"
                        android:textColor="#000"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#ACACAC"/>
                    <com.rey.material.widget.TextView
                        android:id="@+id/residencia"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/residencia"
                        android:textSize="14dp"
                        android:padding="15dp"
                        android:textColor="#000"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#ACACAC"/>
                    <com.rey.material.widget.TextView
                        android:id="@+id/phone"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/ic_phone_in_talk_black_12dp"
                        android:textColor="#000"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#ACACAC"/>
                    <com.rey.material.widget.TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:padding="15dp"
                        android:id="@+id/correo"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/ic_email_black_12dp"
                        android:textColor="#000"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#ACACAC"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.rey.material.widget.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:id="@+id/nombre_detalle"
                        android:hint="Sam Enric"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/margenleft"
                        android:layout_gravity="left"
                        android:background="#00000000"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#ACACAC"/>
                    <com.rey.material.widget.TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/residencia_detalle"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:hint="La reforma"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/margenleft"
                        android:layout_gravity="left"
                        android:focusable="false"
                        android:background="#00000000"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#ACACAC"/>
                    <com.rey.material.widget.TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/telefono_detalle"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="14dp"
                        android:hint="99999999"
                        android:maxLength="8"
                        android:background="#00000000"
                        android:padding="@dimen/margenleft"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#ACACAC"/>
                    <com.rey.material.widget.TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/correo_detalle"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:hint="jenni@gmail.com"
                        android:background="#00000000"
                        android:padding="@dimen/margenleft"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#ACACAC"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



    </androidx.core.widget.NestedScrollView>

</LinearLayout>