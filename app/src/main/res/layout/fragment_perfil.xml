<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000">
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scaleType="fitXY"
            android:src="@drawable/cuatro"
            android:alpha="0.8" />
        <androidx.appcompat.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.rey.material.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informacion Personal"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:textColor="#fff"/>
            <com.rey.material.widget.TextView
                android:id="@+id/pedir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
                android:textSize="15dp"
                android:background="@drawable/oval"
                android:layout_gravity="right"
                android:layout_marginRight="20dp" />
        </androidx.appcompat.widget.Toolbar>


        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/circleview"
            android:layout_width="177dp"
            android:layout_height="187dp"
            style="@style/Material.Widget.ProgressView.Circular"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:view_borderColor="#cccccc"
            app:view_borderWidth="2dp"
            app:view_shadowDx="2dp"
            app:view_shadowDy="0dp"
            app:view_shadowRadius="2dp" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.rey.material.widget.TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_weight="0.35"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="14dp"
            android:layout_marginLeft="@dimen/margenleft"
            android:padding="20dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14dp"
            android:id="@+id/nombresP"
            android:hint="Sam Enric"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:layout_gravity="center"
            android:background="#00000000"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ACACAC"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.rey.material.widget.TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:textSize="14dp"
            android:layout_marginLeft="@dimen/margenleft"
            android:padding="20dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="0dp"
            android:id="@+id/correoP"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14dp"
            android:hint="Sam_enric@Seotoolzz.com"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:layout_gravity="center"
            android:background="#00000000"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ACACAC"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.rey.material.widget.TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Telefono"
            android:textSize="14dp"
            android:padding="20dp"
            android:layout_marginLeft="@dimen/margenleft"
            android:id="@+id/myTextView" />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="0dp"
            android:id="@+id/telefonoP"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="14dp"
            android:hint="99999999"
            android:maxLength="8"
            android:background="#00000000"
            android:padding="20dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ACACAC"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.rey.material.widget.TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Direccion"
            android:textSize="14dp"
            android:padding="20dp"
            android:layout_marginLeft="@dimen/margenleft"
            android:id="@+id/direccion" />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="0dp"
            android:id="@+id/direccionP"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:hint="Danli , el Paraiso colonia la Reforma"
            android:maxLength="8"
            android:background="#00000000"
            android:padding="20dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ACACAC"/>

</LinearLayout>