<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="25dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.PerfilAdmin.PerfilAdminFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/avatarIv"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="center"
                        android:background="#fff" />



                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <com.rey.material.widget.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="@string/nombre"
                            android:textColor="#000"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#ACACAC"/>
                        <com.rey.material.widget.TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/correo"
                            android:textSize="14dp"
                            android:padding="15dp"
                            android:textColor="#000"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#ACACAC"/>
                        <com.rey.material.widget.TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/telefono"
                            android:textSize="14dp"
                            android:padding="@dimen/margenleft"
                            android:id="@+id/myTextView"
                            android:textColor="#000"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#ACACAC"/>
                        <com.rey.material.widget.TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/direccion"
                            android:textSize="14dp"
                            android:padding="@dimen/margenleft"
                            android:id="@+id/direccion"
                            android:textColor="#000"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:id="@+id/nameTvc"
                            android:hint="Lenin Moncada"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/margenleft"
                            android:layout_gravity="left"
                            android:maxLength="100"
                            android:background="#00000000"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#ACACAC"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:id="@+id/emailTv"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:hint="correo_elec@gmail.com"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/margenleft"
                            android:layout_gravity="left"
                            android:focusable="false"
                            android:maxLength="100"
                            android:background="#00000000"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#ACACAC"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:id="@+id/phoneTv"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textSize="14dp"
                            android:hint="32000000"
                            android:maxLength="8"
                            android:background="#00000000"
                            android:padding="@dimen/margenleft"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#ACACAC"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:id="@+id/direccionP"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:hint="Danli , El Paraiso, Barrio El Centro"
                            android:background="#00000000"
                            android:maxLength="250"
                            android:padding="@dimen/margenleft"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



        </androidx.core.widget.NestedScrollView>


    </androidx.core.widget.NestedScrollView>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        app:backgroundTint="@color/colorText"
        app:tint="@color/colorBlanco"
        android:src="@drawable/ic_save_black"
        android:layout_alignParentEnd="true">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>


</RelativeLayout>