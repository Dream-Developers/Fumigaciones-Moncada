<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardElevation="4dp"

   >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon_citas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/cliente" />

        <TextView
            android:id="@+id/nombreCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Nombre:"
            android:textSize="18dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/fechaCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/hora_cita"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text="Fecha:"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/horaCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_above="@+id/precio_cita"
            android:layout_marginTop="9dp"
            android:text="Hora:"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hora_cita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="90dp"
            android:text="10:50"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/fecha_cita"
            android:visibility="visible" />

        <TextView
            android:id="@+id/fecha_cita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/nombre_cita"
            android:text="10/01/2020"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nombre_cita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Izamar Molina"
         android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/PrecioCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/hora_cita"
            android:text="Precio:"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/precio_cita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/hora_cita"
            android:text="1200"
            android:textSize="18sp"
            android:visibility="visible"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>



</androidx.cardview.widget.CardView>