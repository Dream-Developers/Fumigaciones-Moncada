<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EAEDF4"
    tools:context=".VisionMision">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/itemSlid3"
                    android:layout_width="400dp"
                    android:layout_height="220dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/mision"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="34dp"
                            android:text="Misión"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/descripcionmision"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="6dp"
                            android:layout_gravity="center"
                            android:text="Establecer la empresa en los primeros lugares de servicio de fumigación a nivel local, departamental y nacional cumpliendo con las expectativas empresariales y familiares logrando con ello la satisfacción en nuestros clientes."
                            android:textColor="#000"
                            android:textSize="18sp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/itemSlid"
                    android:layout_width="400dp"
                    android:layout_height="220dp"
                    android:layout_marginRight="24dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/vision"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="34dp"
                            android:text="Visión"
                            android:layout_gravity="center"
                            android:textColor="#FFF"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/descripciovision"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="6dp"
                            android:text="Lograr para el año 2021 ser una empresa de servicio de fumigación solida y diseminada en diferentes departamentos de nuestro país, con el objetivo de generar empleos y posicionarnos en la mente de nuestros clientes actuales y futuros."
                            android:textColor="#000"
                            android:textSize="18sp" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </HorizontalScrollView>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/control" />

</RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Contactanos"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="24dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center">


        <Button
            android:id="@+id/btn_facebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/facebook"
            app:layout_constraintBottom_toBottomOf="@+id/btn_telefono"
            app:layout_constraintEnd_toStartOf="@+id/btn_telefono"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_telefono" />

        <Button
            android:id="@+id/btn_telefono"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/telefono"
            app:layout_constraintBottom_toBottomOf="@+id/btn_instagram"
            app:layout_constraintEnd_toStartOf="@+id/btn_instagram"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_facebook"
            app:layout_constraintTop_toTopOf="@+id/btn_instagram"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_instagram"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/instagram"
            app:layout_constraintEnd_toStartOf="@+id/btn_web"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_telefono"
            app:layout_constraintTop_toTopOf="@+id/btn_web" />

        <Button
            android:id="@+id/btn_web"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_marginTop="564dp"
            android:background="@drawable/web"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_instagram"
            tools:ignore="MissingConstraints" />

    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
</androidx.core.widget.NestedScrollView>


